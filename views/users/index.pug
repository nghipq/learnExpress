extends ../layout/layout.pug

block content
    .container
        h1= user.name
        a(href="/user/create") create
        form.form-inline.my-2.my-lg-0(action="/user/search", method="GET")
           input.form-control.mr-sm-2(value=q type="text", name="q")
           button.btn.btn-outline-success.my-2.my-sm-0 search   
        h2 Product List
        ul.d-flex.flex-row
          each product in products
            li.d-flex.flex-column.justify-content-center.align-items-center.ml-5
              h4= product.name
              img(src= 'https://via.placeholder.com/200')
              p= product.description
              a(href="#")= product.price
    
    
          