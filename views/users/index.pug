extends ../layout/layout.pug

block content
    .container
        h1= user.name
        a(href="/user/create") create
        form.form-inline.my-2.my-lg-0(action="/user/search", method="GET")
           input.form-control.mr-sm-2(value=q type="text", name="q")
           button.btn.btn-outline-success.my-2.my-sm-0 search   
        h2 Product List
        ul.row.list-unstyled
          each product in products
            li.col-sm-4.mb-3
              .card.d-flex.flex-column.justify-content-center.align-items-center(style='width: 18rem; height: 26rem')
                img.card-img-top(src= product.img , alt='...')
                .card-body
                h5.card-title= product.name
                p.card-text(style="font-size: 1rem; text-align: center")= product.description
                a(href="#" style="font-size: 0.8rem")= product.price
                a.btn.btn-primary(style="width: 100%" href='#') ADD TO CART+

    
    
          