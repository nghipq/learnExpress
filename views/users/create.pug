extends ../layout/layout.pug

block content
  .container
    h1 User create

    if errors 
      each error in errors
        .alert.alert-danger=error
    form(method="POST", enctype="multipart/form-data")
      .form-group
        label(for = 'product-name') Name 
        input#product-name.form-control(type="text" name="name" value= values ? values.name : "")
      .form-group
        label(for = 'description') Description 
        input#description.form-control(type="text" name="description" value= values ? values.email : "")
      .form-group 
        label(for = 'price') Price 
        input#price.form-control(type="text" name="price" value= values ? values.password : "")
      .form-group 
        label(for = 'img') Image 
        input#img.form-control-file(name="img" type="file" value= values ? values.img : "")  
      button.btn.btn-primary Create        
