extends ../layout/layout.pug

block content
  .container
    h1 Join
    if errors 
      each error in errors
        .alert.alert-danger=error
    form(action="/auth/join", method="POST")
      .form-group
        label(for = 'name') Name 
        input#email.form-control(type="text" name="name" value= values ? values.name : "")
      .form-group
        label(for = 'email') Email 
        input#email.form-control(type="email" name="email" value= values ? values.email : "")
      .form-group 
        label(for = 'password') Password 
        input#password.form-control(type="password" name="password" value= values ? values.password : "")
      button.btn.btn-primary Join
